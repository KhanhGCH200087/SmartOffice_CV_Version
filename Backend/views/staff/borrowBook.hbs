
<div class="container-xl">
    <div class="table-responsive">
    <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <input class="form-control" id="myInput" type="text" placeholder="Search..">
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        {{#if message}}<div class="alert alert-info"><strong>System: </strong> {{message}}</div>{{/if}}             
                        {{#if error}}<div class="alert alert-danger"><strong>Error:</strong> {{error}}</div>{{/if}}
                        {{#if errors}}<div class="alert alert-danger"><strong>Error:</strong> {{errors}}</div>{{/if}}
                        <h2><b>Total Borrow Book: {{userData.borrow_book.length}}</b></h2>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 10%;">#</th>
                        <th style="width: 30%;">Name</th>
                        <th style="width: 30%;">Day Borrow</th>
                    </tr>
                </thead>
                <tbody id="myTable">		
                    {{#each userData.borrow_book.length}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td>{{this.book_id.name}}</td>
                            <td>{{this.day_borrow }}</td>
                        </tr> 
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>        
</div>