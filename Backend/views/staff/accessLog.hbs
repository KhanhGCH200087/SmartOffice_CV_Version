
<div class="container-xl">
    <div class="table-responsive">
    <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <input class="form-control" id="myInput" type="text" placeholder="Search..">
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        {{#if message}}<div class="alert alert-info"><strong>System: </strong> {{message}}</div>{{/if}}             
                        {{#if error}}<div class="alert alert-danger"><strong>Error:</strong> {{error}}</div>{{/if}}
                        {{#if errors}}<div class="alert alert-danger"><strong>Error:</strong> {{errors}}</div>{{/if}}
                        <h2><b>Total Access Log: {{accessLog.length}}</b></h2>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 7%;">#</th>
                        <th style="width: 12%;">RFID</th>
                        <th style="width: 13%;">Day</th>
                        <th style="width: 8%;">Time</th>
                        <th style="width: 30%;">Department</th>
                        {{!-- <th style="width: 20%;">Image</th> --}}
                    </tr>
                </thead>
                <tbody id="myTable">		
                    {{#each accessLog}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td>{{this.rfid}}</td>
                            <td>{{this.day}}</td>
                            <td>{{this.time}}</td>
                            <td>{{this.department_id.name}}</td>
                            {{!-- <td>
                                <img src="data:image/jpeg;base64,{{this.image}}" style="width:90%">
                            </td> --}}
                        </tr> 
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>        
</div>