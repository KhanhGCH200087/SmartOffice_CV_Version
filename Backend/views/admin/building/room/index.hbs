
<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <input class="form-control" id="myInput" type="text" placeholder="Search..">
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        {{#if message}}<div class="alert alert-info"><strong>System: </strong> {{message}}</div>{{/if}}             
                        {{#if error}}<div class="alert alert-danger"><strong>Error:</strong> {{error}}</div>{{/if}}
                        {{#if errors}}<div class="alert alert-danger"><strong>Error:</strong> {{errors}}</div>{{/if}}
                        <h2><b>List of Active Room: {{active_list.length}}</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="/room/add" class="btn btn-success" ><i class="material-icons">&#xE147;</i> <span>Add New Room</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover" border="1" cellpadding="10" cellspacing="0" style="width: 100%; table-layout: fixed;">
                <thead>
                    <tr>
                        <th style="width: 7%;">#</th>
                        <th style="width: 30%;">Room Name</th>
                        <th style="width: 10%;">Floor</th>
                        <th style="width: 30%;">Department</th>
                        <th style="width: 30%;">Actions</th>
                    </tr>
                </thead>
                <tbody id="myTable">		
                    {{#each active_list}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td>{{ name }}</td>
                            <td>{{floor}}</td>
                            <td>{{department.name}}</td>
                            <td>
                                <a href="/room/edit/{{_id}}" class="edit" ><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                                <a href="/room/delete/{{_id}}" class="delete" 
                                onclick="return confirm('Do you want to delete this room: {{name}} ?' )"
                                ><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                                <a href="/room/deactive/{{_id}}" class="btn btn-outline-success" role="button">Deactive</a>
                                <a href="/room/detail/{{_id}}" class="btn btn-outline-success" role="button">Detail</a>
                            </td>
                        </tr> 
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2><b>List of Deactive Room: {{deactive_list.length}}</b></h2>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover" border="1" cellpadding="10" cellspacing="0" style="width: 100%; table-layout: fixed;">
                <thead>
                    <tr>
                        <th style="width: 7%;">#</th>
                        <th style="width: 30%;">Room Name</th>
                        <th style="width: 10%;">Floor</th>
                        <th style="width: 30%;">Department</th>
                        <th style="width: 30%;">Actions</th>
                    </tr>
                </thead>
                <tbody id="myTable">		
                    {{#each deactive_list}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td>{{ name }}</td>
                            <td>{{floor}}</td>
                            <td>{{department.name}}</td>
                            <td>
                                <a href="/room/edit/{{_id}}" class="edit" ><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                                <a href="/room/delete/{{_id}}" class="delete" 
                                onclick="return confirm('Do you want to delete this room: {{name}} ?' )"
                                ><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                                <a href="/room/active/{{_id}}" class="btn btn-outline-success" role="button">Active</a>
                                <a href="/room/detail/{{_id}}" class="btn btn-outline-success" role="button">Detail</a>
                            </td>
                        </tr> 
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>        
</div>