
        <div class="container-lg">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    <div class="contact-form">
                        <h1>Enter Schedule Detail</h1>
                        {{#if message}}<div class="alert alert-info"><strong>System: </strong> {{message}}</div>{{/if}}             
                        {{#if error}}<div class="alert alert-danger"><strong>Error:</strong> {{error}}</div>{{/if}}
                        {{#if errors}}<div class="alert alert-danger"><strong>Error:</strong> {{errors}}</div>{{/if}}
                        <form action="" method="post" > 
                            <div class="form-group">
                                <label for="inputSubject">Status of Device.</label>
                                <select name="status" id="">
                                    <option value=2>Device ON -> Device OFF</option>
                                    <option value=1>Device OFF -> Device ON</option>
                                </select>
                            </div> 

                            <div class="form-group">
                                <label for="inputSubject">Time</label>
                                <input type="number" id="quantity" name="hours" min="0" max="24" value="0" required>
                                <input type="number" id="quantity" name="minutes" min="0" max="60" value="0" required>
                            </div> 
                            
                            <button type="submit" value="Add" class="btn btn-primary"><i class="fa fa-paper-plane"></i> Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
