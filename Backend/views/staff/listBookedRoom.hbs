
<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                        <input class="form-control" id="myInput" type="text" placeholder="Search..">
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        {{#if message}}<div class="alert alert-info"><strong>System: </strong> {{message}}</div>{{/if}}             
                        {{#if error}}<div class="alert alert-danger"><strong>Error:</strong> {{error}}</div>{{/if}}
                        {{#if errors}}<div class="alert alert-danger"><strong>Error:</strong> {{errors}}</div>{{/if}}
                        <h2><b>Host: {{hostList.length}}</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="/staff/addBookedRoom" class="btn btn-success" ><i class="material-icons">&#xE147;</i> <span>Book New Room</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover" border="1" cellpadding="10" cellspacing="0" style="width: 100%; table-layout: fixed;">
                <thead>
                    <tr>
                        <th style="width: 5%;">#</th>
                        <th style="width: 30%;">Room</th>
                        <th style="width: 13%;">Day</th>
                        <th style="width: 12%;">Time Start</th>
                        <th style="width: 12%;">Time End</th>
                        <th style="width: 10%;">Active</th>
                        <th style="width: 30%;">Action</th>
                    </tr>
                </thead>
                <tbody id="myTable">		
                    {{#each hostList}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td>{{ this.room.name }}</td>
                            <td >{{ this.day }}</td>
                            <td>{{ this.time_start }}</td>
                            <td>{{this.time_end}}</td>
                            <td>
                                {{#ifEqual this.active 2 }}
                                    <img src= "https://storage.needpix.com/rsynced_images/button-29286_1280.png" width="30" height="30">
                                {{else}}
                                    <img src= "https://storage.needpix.com/rsynced_images/error-24842_1280.png" width="30" height="30">
                                {{/ifEqual}}
                            </td>
                            <td>
                                <a href="/staff/editBookedRoom/{{this._id}}" class="edit" ><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                                <a href="/staff/deleteBookedRoom/{{this._id}}" class="delete" onclick="return confirm('Do you want to delete this room: {{this.room.name}} ?' )" ><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                                <a href="/staff/detailBookedRoom/{{this._id}}" class="btn btn-outline-success" role="button">Detail</a>
                                {{#ifEqual this.active 2 }}
                                    <a href="/staff/deactiveBookedRoom/{{this._id}}" class="btn btn-outline-success" role="button">Deactive</a>
                                {{else}}
                                    <a href="/staff/activeBookedRoom/{{this._id}}" class="btn btn-outline-success" role="button">Active</a>
                                {{/ifEqual}}
                            </td>
                        </tr> 
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2><b>Inviter: {{inviterList.length}}</b></h2>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover" border="1" cellpadding="10" cellspacing="0" style="width: 100%; table-layout: fixed;">
                <thead>
                    <tr>
                        <th style="width: 5%;">#</th>
                        <th style="width: 30%;">Room</th>
                        <th style="width: 20%;">Day</th>
                        <th style="width: 15%;">Time Start</th>
                        <th style="width: 15%;">Time End</th>
                        <th style="width: 10%;">Active</th>
                        <th style="width: 30%;">Action</th>
                    </tr>
                </thead>
                <tbody id="myTable">		
                    {{#each inviterList}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td>{{ this.room.name }}</td>
                            <td >{{ this.day }}</td>
                            <td>{{ this.time_start }}</td>
                            <td>{{this.time_end}}</td>
                            <td>
                                {{#ifEqual this.active 2 }}
                                    <img src= "https://storage.needpix.com/rsynced_images/button-29286_1280.png" width="30" height="30">
                                {{else}}
                                    <img src= "https://storage.needpix.com/rsynced_images/error-24842_1280.png" width="30" height="30">
                                {{/ifEqual}}
                            </td>
                            <td>
                                <a href="/staff/detailBookedRoom/{{this._id}}" class="btn btn-outline-success" role="button">Detail</a>
                            </td>
                        </tr> 
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>        
</div>