
        <div class="container-xl">
            <div class="table-responsive">
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <input class="form-control" id="myInput" type="text" placeholder="Search..">
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                {{#if message}}<div class="alert alert-info"><strong>System: </strong> {{message}}</div>{{/if}}             
                                {{#if error}}<div class="alert alert-danger"><strong>Error:</strong> {{error}}</div>{{/if}}
                                {{#if errors}}<div class="alert alert-danger"><strong>Error:</strong> {{errors}}</div>{{/if}}
                                <h2><b>Active User: {{active_user.length}}</b></h2>
                            </div>
                            <div class="col-sm-6">
                                <a href="/userstaff/add" class="btn btn-success" ><i class="material-icons">&#xE147;</i> <span>Add New User</span></a>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover" border="1" cellpadding="10" cellspacing="0" style="width: 100%; table-layout: fixed;">
                        <thead>
                            <tr>
                                <th style="width: 7%;">#</th>
                                <th style="width: 30%;">Name</th>
                                <th style="width: 30%;">Email</th>
                                <th style="width: 20%;">Image</th>
                                <th style="width: 30%;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="myTable">		
                            {{#each active_user}}
                                <tr>
                                    <td>{{inc @index}}</td>
                                    <td>{{ name }}</td>
                                    <td >{{ email }}</td>
                                    <td><img src="data:image/jpeg;base64,{{image}}" class="img-responsive" width="100" height="100"></td>
                                    <td>
                                        <a href="/userstaff/edit/{{_id}}" class="edit" ><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                                        <a href="/userstaff/delete/{{_id}}" class="delete" 
                                        onclick="return confirm('Do you want to delete this user: {{ name }}?' )"
                                        ><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                                        <a href="/userstaff/detail/{{_id}}" class="btn btn-outline-success" role="button">Detail</a>
                                        <a href="/userstaff/deactive/{{_id}}" class="btn btn-outline-success" role="button">Deactive</a>
                                    </td>
                                </tr> 
                            {{/each}}
                        </tbody>
                    </table>
                </div>

                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-6">
                                <h2><b>Dective User: {{deactive_user.length}}</b></h2>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover" border="1" cellpadding="10" cellspacing="0" style="width: 100%; table-layout: fixed;">
                        <thead>
                            <tr>
                                <th style="width: 7%;">#</th>
                                <th style="width: 30%;">Name</th>
                                <th style="width: 30%;">Email</th>
                                <th style="width: 20%;">Image</th>
                                <th style="width: 30%;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="myTable">		
                            {{#each deactive_user}}
                                <tr>
                                    <td>{{@index}}</td>
                                    <td>{{ name }}</td>
                                    <td >{{ email }}</td>
                                    <td><img src="data:image/jpeg;base64,{{image}}" class="img-responsive" width="100" height="100"></td>

                                    <td>
                                        <a href="/userstaff/edit/{{_id}}" class="edit" ><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                                        <a href="/userstaff/delete/{{_id}}" class="delete" 
                                        onclick="return confirm('Do you want to delete this user: {{ name }}?' )"
                                        ><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                                        <a href="/userstaff/detail/{{_id}}" class="btn btn-outline-success" role="button">Detail</a>
                                        <a href="/userstaff/active/{{_id}}" class="btn btn-outline-success" role="button">Active</a>
                                    </td>
                                </tr> 
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                
            </div>        
        </div>