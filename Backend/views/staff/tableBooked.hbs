
<div class="container-xl">
    <div class="table-responsive">
    <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <input class="form-control" id="myInput" type="text" placeholder="Search..">
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        {{#if message}}<div class="alert alert-info"><strong>System: </strong> {{message}}</div>{{/if}}             
                        {{#if error}}<div class="alert alert-danger"><strong>Error:</strong> {{error}}</div>{{/if}}
                        {{#if errors}}<div class="alert alert-danger"><strong>Error:</strong> {{errors}}</div>{{/if}}
                        <h2><b>Total Booked Table: {{userData.table_booked.length}}</b></h2>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 7%;">#</th>
                        <th style="width: 30%;">Table</th>
                        <th style="width: 15%;">Day</th>
                        <th style="width: 15%;">Time</th>
                        <th style="width: 30%;">Note</th>
                    </tr>
                </thead>
                <tbody id="myTable">		
                    {{#each userData.table_booked}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td>{{this.subject_table_id.table_name}}</td>
                            <td>{{this.day}}</td>
                            <td>{{this.time}}</td>
                            <td>{{this.note}}</td>
                        </tr> 
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>        
</div>