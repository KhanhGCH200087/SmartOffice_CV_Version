
        <div class="container-lg">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    <div class="contact-form">
                        <h1>Enter User Details</h1>
                        {{#if message}}<div class="alert alert-info"><strong>System: </strong> {{message}}</div>{{/if}}             
                        {{#if error}}<div class="alert alert-danger"><strong>Error:</strong> {{error}}</div>{{/if}}
                        {{#if errors}}<div class="alert alert-danger"><strong>Error:</strong> {{errors}}</div>{{/if}}
                        <form action="/userstaff/add" method="post" enctype="multipart/form-data" > 
                            <div class="form-group">
                                <label for="inputSubject">Name</label>
                                <input type="text" class="form-control" name="name" required>
                            </div> 
                            <div class="form-group">
                                <label for="inputSubject">Email</label>
                                <input type="email" class="form-control" name="email" required>
                            </div>
                            <div class="form-group">
                                <label for="inputSubject">Password</label>
                                <input type="password" class="form-control" name="password" required>
                            </div>  
                            <div class="form-group">
                                <label for="inputSubject">RFID</label>
                                <input type="text" class="form-control" name="rfid" required>
                            </div> 
                            <div class="form-group">
                                <label for="inputSubject">Image</label>
                                <input type="file" class="form-control" name="image" accept="image/*">
                            </div> 
                            <div class="form-group">
                                <label for="inputSubject">Room</label>
                                <select name="room" id="">
                                    {{#each roomList}}
                                        <option value="{{_id}}">
                                            {{name}}
                                        </option>
                                    {{/each}}
                                </select>
                            </div>
                            <button type="submit" value="Add" class="btn btn-primary"><i class="fa fa-paper-plane"></i> Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
