
        <div class="container-lg">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    <div class="contact-form">
                        <h1>Enter Department Details</h1>
                        {{#if message}}<div class="alert alert-info"><strong>System: </strong> {{message}}</div>{{/if}}             
                        {{#if error}}<div class="alert alert-danger"><strong>Error:</strong> {{error}}</div>{{/if}}
                        {{#if errors}}<div class="alert alert-danger"><strong>Error:</strong> {{errors}}</div>{{/if}}
                        <form action="" method="post" > 
                            <div class="form-group">
                                <label for="inputSubject">Name</label>
                                <input type="text" class="form-control" name="name" value="{{data.name}}"required>
                            </div> 
                            <div class="form-group">
                                <label for="inputSubject">Short Description</label>
                                <input type="text" class="form-control" name="description" value="{{data.description}}"required>

                            </div>    
                            <div class="form-group">
                                <label for="inputSubject">Attendance Device: &nbsp; "{{device_origin.name}}" &nbsp;&nbsp;&nbsp;</label>
                                    {{#each deviceList}}
                                        <label><input type="radio" name="device" value="{{_id}}">{{name}}</label>
                                    {{/each}}
                                </select>
                            </div>
                            <button type="submit" value="Add" class="btn btn-primary"><i class="fa fa-paper-plane"></i> Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
