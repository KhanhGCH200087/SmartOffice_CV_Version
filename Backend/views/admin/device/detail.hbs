
        <div class="container-lg">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    <div class="contact-form">
                        {{#if message}}<div class="alert alert-info"><strong>System: </strong> {{message}}</div>{{/if}}             
                        {{#if error}}<div class="alert alert-danger"><strong>Error:</strong> {{error}}</div>{{/if}}
                        {{#if errors}}<div class="alert alert-danger"><strong>Error:</strong> {{errors}}</div>{{/if}}
                        <a href="/device/delete/{{detail._id}}" class="btn btn-outline-success" role="button"
                        onclick="return confirm('Do you want to delete this device: {{detail.name}} ?' )"
                        >Delete</a>
                        <a href="/device/edit/{{detail._id}}" class="btn btn-outline-success" role="button">Edit</a>
                        <h1>Detail of device </h1>
                            <div class="form-group">
                                <h4>Device name: {{detail.name}}</h4>
                                <h4>Active: {{active}}</h4>
                                <h4>Type: {{detail.type}}</h4>
                                <h4>Note: {{detail.note}}</h4>
                                {{#ifEqual detail.data "null"}}
                                    <h4>Data: Data is not available</h4>
                                {{else}}
                                    <h4>Available Data: {{detail.data}}</h4>
                                {{/ifEqual}}
                                {{#if active_true}}
                                    <a href="/device/deactive/{{detail._id}}" class="btn btn-outline-success" role="button">Deactive Device</a>
                                {{/if}}
                                {{#if active_false}}
                                    <a href="/device/active/{{detail._id}}" class="btn btn-outline-success" role="button">Active Device</a>
                                {{/if}}
                            </div>
                        <h1>Device Log </h1>
                            <table class="table table-striped table-hover" border="1" cellpadding="10" cellspacing="0" style="width: 100%; table-layout: fixed;">
                                <thead>
                                    <tr>
                                        <th style="width: 8%;">#</th>
                                        <th style="width: 60%;">Log</th>
                                        <th style="width: 10%;">Type</th>
                                        <th style="width: 15%;">Day</th>
                                        <th style="width: 12%;">Time</th>
                                    </tr>
                                </thead>
                                <tbody>		
                                    {{#each reversedLogs}}
                                        <tr>
                                            <td>{{inc @index}}</td>
                                            <td style="word-wrap: break-word; white-space: normal;">
                                                {{this.log}}
                                            </td>
                                            <td>{{ this.type }}</td>
                                            <td>{{ this.day }}</td>
                                            <td>{{ this.time }}</td>
                                        </tr> 
                                    {{/each}}
                                </tbody>
                            </table>
                    </div>
                </div>
            </div>
        </div>
