
        <div class="container-lg">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    <div class="contact-form">
                        <h1>Enter Room Details</h1>
                        {{#if message}}<div class="alert alert-info"><strong>System: </strong> {{message}}</div>{{/if}}             
                        {{#if error}}<div class="alert alert-danger"><strong>Error:</strong> {{error}}</div>{{/if}}
                        {{#if errors}}<div class="alert alert-danger"><strong>Error:</strong> {{errors}}</div>{{/if}}
                        <form action="" method="post" > 
                            <div class="form-group">
                                <label for="inputSubject">Name</label>
                                <input type="text" class="form-control" name="name" value="{{data.name}}" required>
                            </div> 
                            <div class="form-group">
                                <label for="inputSubject">Floor</label>
                                <input type="number" class="form-control" name="floor" value="{{data.floor}}" required>

                            </div>    
                            <div class="form-group">
                                <label for="inputSubject">Department: "{{department_origin.name}}"</label>
                                    {{#each departmentList}}
                                        <label><input type="radio" name="department_id" value="{{_id}}">{{name}}</label>
                                    {{/each}}
                            </div>
                            <button type="submit" value="Edit" class="btn btn-primary"><i class="fa fa-paper-plane"></i> Save Change</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
